
@{
    ViewBag.Title = "Create";
}

@model NDProject.Models.UserDetails

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>H.N.B. UTTARAKHAND MEDICAL EDUCATION UNVERSITY</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.ico" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">
    <link href="~/assets/css/sweetalert2.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap-datepicker.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">



    <script src="~/assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/assets/js/Login.js"></script>
</head>

<body>
    <div class="homeHeader">
        <div class="container">
            <a href="#"><img src="~/assets/images/logo.png" width="450" alt=""></a>
            <div class="homeHeadHelp">
                <div class="mb-1 w-100 d-flex align-items-center"><i class="ri-phone-fill"></i>9876543210</div>
                <div class="mb-1 w-100 d-flex align-items-center"><i class="ri-mail-fill"></i>example@gmail.com</div>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="mainWrap loginCouncelling align-items-center justify-content-center">
            <div class="card cardBG">
                <h5 class="card-title">Fill Your Details</h5>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <p class="text-success">@TempData["Message"]</p>
                    }

                    @*@if (TempData["Error"] != null)
                        {
                            <p class="text-danger">@TempData["Error"]</p>
                        }*@
                    @if (TempData["Error"] != null)
                    {
                        <p class="text-danger">@TempData["Error"]</p>
                    }
                    <form action="/UserDetails/Create" method="post">
                        <div class="row g-3">
                            <!-- Programme Dropdown -->
                            <div class="col-md-6">
                                <label for="programme">Select Programme</label>
                                <select class="form-control" id="programme" name="programme">
                                    <option value="">Select a Programme</option>
                                    @if (ViewBag.Programmes != null)
                                    {
                                        foreach (var item in (List<NDProject.Models.DropdownList>)ViewBag.Programmes)
                                        {
                                            <option value="@item.ProgrammeId">
                                                @*@(item.DropdownId == Model.DropdownId ? "selected" : "")>*@
                                                @item.programme
                                            </option>
                                        }
                                    }
                                    else
                                    {
                                        <option disabled>No programmes available</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(m => m.programme, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label id="Name" for="Name" class="form-label mand">Name</label>
                                <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter your name">
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                            <!-- Roll Number Field -->
                            <div class="col-md-6">
                                <label id="NeetRollNoLabel" for="NeetRollNo" class="form-label mand">NEET Roll No.</label>
                                <input type="text" class="form-control" id="NeetRollNo" name="NeetRollNo" placeholder="Enter NEET Roll Number">
                                @Html.ValidationMessageFor(m => m.NeetRollNo, "", new { @class = "text-danger" })
                            </div>

                            <!-- Other Fields -->
                            <div class="col-md-6">
                                <label for="DateOfBirth" class="form-label mand">Date of Birth</label>
                                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth">
                                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label for="MobileNo" class="form-label mand">Mobile No.</label>
                                <input type="text" class="form-control" id="MobileNo" name="MobileNo">
                                @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class = "text-danger" })

                            </div>

                            <div class="col-md-6">
                                <label for="Email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label for="Password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="Password" name="Password">
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label for="FathersName" class="form-label">Father's Name</label>
                                <input type="text" class="form-control" id="FathersName" name="FathersName">
                                @Html.ValidationMessageFor(m => m.FathersName, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label for="MothersName" class="form-label">Mother's Name</label>
                                <input type="text" class="form-control" id="MothersName" name="MothersName">
                                @Html.ValidationMessageFor(m => m.MothersName, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label for="Gender" class="form-label">Gender</label>
                                <input type="text" class="form-control" id="Gender" name="Gender">
                                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                            </div>

                            <!-- Submit Button -->
                            <div class="col-lg-12 mt-4 text-center">
                                <button type="submit" class="btn1">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <section class="copyright">
        <div class="container">
            <p class="mb-0">Copyright © H.N.B. Uttarakhand Medical Education University, Dehradun</p>
        </div>
    </section>


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->

    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/quill/quill.min.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/chart.js/chart.min.js"></script>
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/js/sweetalert2.min.js"></script>
    <script src="~/assets/js/bootstrap-datepicker.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>


  



</body>

</html>






